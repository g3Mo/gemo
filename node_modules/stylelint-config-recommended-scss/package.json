{
  "name": "stylelint-config-recommended-scss",
  "version": "4.0.0",
  "description": "Recommended shareable SCSS config for stylelint",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "recommended"
  ],
  "author": "kristerkari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kristerkari/stylelint-config-recommended-scss.git"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-stylelint": "^11.1.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "npmpub": "^4.1.0",
    "remark-cli": "^7.0.0",
    "remark-preset-lint-consistent": "^2.0.3",
    "remark-preset-lint-recommended": "^3.0.3",
    "stylelint": "^11.0.0",
    "stylelint-scss": "^3.11.0"
  },
  "peerDependencies": {
    "stylelint": "^10.1.0 || ^11.0.0",
    "stylelint-scss": "^3.0.0"
  },
  "dependencies": {
    "stylelint-config-recommended": "^3.0.0"
  },
  "scripts": {
    "dry-release": "npmpub --dry --verbose",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npmpub",
    "test": "jest",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  }
}
